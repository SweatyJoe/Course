<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab14"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Lab14.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="24" VerticalAlignment="Top" FontSize="16">
            <MenuItem Header="File">
                <MenuItem Header="Загрузить текст" Click="MenuLoadText"></MenuItem>
                <Separator />
                <MenuItem Header="Сохранить как текст" Click="MenuSaveText"></MenuItem>
                <MenuItem Header="Сохранить как HTML" Click="MenuSaveHTML"></MenuItem>
            </MenuItem>
            <MenuItem Header="Выход"></MenuItem>
        </Menu>
        <TextBox x:Name="textContent" Margin="0,24,0,0" TextWrapping="Wrap" Text="TextBox" FontSize="16" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
